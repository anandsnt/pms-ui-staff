{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "node": true,
        "jasmine": true
    },
    "globals": {
        "angular": false,
        "React": false,
        "ReactDOM": false,
        "Provider": false,
        "ReactRedux": false,
        "ReduxThunk": false,
        "_": false,
        "cordova": false,
        "BaseCtrl": true,
        "sntRover":true,
        "sntapp": true,
        "isEmptyObject": true,
        "sntGuestWeb": true,
        "admin": true,
        "ADBaseTableCtrl": true,
        "tzIndependentDate": true,
        "getJqDateFormat": false,
        "CardReaderCtrl": false,
        "sntCordovaInit": false,
        "CardOperation": false,
        "jsHue": false,
        "webSocketOperations": false,
        "moment": false,
        "FastClick": false,
        "module": false,
        "inject": false
    },
    "parserOptions":{
        "ecmaFeatures":{
            "experimentalObjectRestSpread":true,
            "jsx":true
        }
    },
    "extends": [
      "eslint:recommended",
      "angular"
    ],
    "plugins":[
        "react"
    ],
    "rules":{
        "eqeqeq":[
            "error"
        ],
        "indent":"error",
        "linebreak-style":[
            "error",
            "unix"
        ],
        "quotes":[
            "warn",
            "single"
        ],
        "semi":[
            "error",
            "always"
        ],
        "no-extra-parens":[
            "warn",
            "all",
            { "nestedBinaryExpressions" : false }
        ],
        "valid-jsdoc":[
            "error"
        ],
        "default-case":[
            "warn"
        ],
        "curly":[
            "error"
        ],
        "complexity":[
            "warn",
            {
                "max":20
            }
        ],
        "guard-for-in":"warn",
        "no-alert":"error",
        "no-caller":"error",
        "no-else-return":"error",
        "no-extend-native":"error",
        "no-extra-bind":"error",
        "no-implied-eval":"error",
        "no-invalid-this":"error",
        "no-loop-func":"error",
        "no-magic-numbers":[
            "warn",
            {
                "ignore":[
                    0,
                    1
                ],
                "ignoreArrayIndexes":true
            }
        ],
        "no-multi-spaces":"warn",
        "no-return-assign":[
            "error",
            "always"
        ],
        "no-self-compare":"error",
        "no-throw-literal":"error",
        "no-unused-expressions":"error",
        "radix":"warn",
        "vars-on-top":"warn",
        "wrap-iife":[
            "error",
            "any"
        ],
        "comma-dangle":[
            "error",
            "never"
        ],
        "comma-spacing":[
            "error",
            {
                "before":false,
                "after":true
            }
        ],
        "key-spacing":[
            "error",
            {
                "afterColon":true,
                "beforeColon":false
            }
        ],
        "keyword-spacing":[
            "error",
            {
                "before":true,
                "after":true
            }
        ],
        "max-depth":[
            "error",
            4
        ],
        "max-len":[
            "error",
            150
        ],
        "max-lines":[
            "warn",
            {
                "max":600,
                "skipBlankLines":true,
                "skipComments":true
            }
        ],
        "max-nested-callbacks":[
            "error",
            4
        ],
        "max-params":[
            "warn",
            5
        ],
        "max-statements-per-line":[
            "error",
            {
                "max":1
            }
        ],
        "max-statements":[
            "warn",
            50,
            {
                "ignoreTopLevelFunctions": true
            }
        ],
        "newline-after-var":[
            "error",
            "always"
        ],
        "newline-per-chained-call":[
            "error",
            {
                "ignoreChainWithDepth":2
            }
        ],
        "no-mixed-operators": [
            "error",
            {
                "groups": [
                    ["&&", "||"]
                ],
                "allowSamePrecedence": true
            }
        ],
        "no-multiple-empty-lines":[
            "error",
            {
                "max":2,
                "maxEOF":1,
                "maxBOF":1
            }
        ],
        "no-unneeded-ternary":"error",
        "no-whitespace-before-property":"error",
        "object-property-newline":"error",
        "require-jsdoc":[
            "error",
            {
                "require":{
                    "FunctionDeclaration":true,
                    "MethodDefinition":true,
                    "ClassDeclaration":true
                }
            }
        ],
        "space-before-blocks":"error",
        "space-infix-ops":"error",
        "spaced-comment":[
            "error",
            "always"
        ],
        "angular/controller-as": "off",
        "angular/di": ["off", "array"],
        "angular/controller-as-vm": "off"
    }
}
