{  
    "env":{  
        "browser":true,
        "es6":true,
        "jquery":true
    },
    "installedESLint":true,
    "parserOptions":{  
        "ecmaFeatures":{  
            "experimentalObjectRestSpread":true,
            "jsx":true
        }
    },
    "plugins":[  
        "react"
    ],
    "rules":{
        "eqeqeq":[  
            "error"
        ],
        "indent":"error",
        "linebreak-style":[  
            "error",
            "unix"
        ],
        "quotes":[  
            "warn",
            "single"
        ],
        "semi":[  
            "error",
            "always"
        ],
        "no-extra-parens":[  
            "warn"
        ],
        "default-case":[  
            "warn"
        ],
        "curly":[  
            "error"
        ],
        "complexity":[  
            "warn",
            {  
                "max":20
            }
        ],
        "guard-for-in":"warn",
        "no-alert":"error",
        "no-caller":"error",
        "no-else-return":"error",
        "no-extend-native":"error",
        "no-extra-bind":"error",
        "no-implied-eval":"error",
        "no-invalid-this":"error",
        "no-loop-func":"error",
        "no-magic-numbers":[  
            "warn",
            {  
                "ignore":[  
                    0,
                    1
                ],
                "ignoreArrayIndexes":true
            }
        ],
        "no-multi-spaces":"warn",
        "no-return-assign":[  
            "error",
            "always"
        ],
        "no-self-compare":"error",
        "no-throw-literal":"error",
        "no-unused-expressions":"error",
        "radix":"warn",
        "vars-on-top":"warn",
        "wrap-iife":[  
            "error",
            "any"
        ],
        "comma-dangle":[  
            "error",
            "never"
        ],
        "comma-spacing":[  
            "error",
            {  
                "before":false,
                "after":true
            }
        ],
        "key-spacing":[  
            "error",
            {  
                "afterColon":true,
                "beforeColon":false
            }
        ],
        "keyword-spacing":[  
            "error",
            {  
                "before":true,
                "after":true
            }
        ],
        "newline-after-var":[  
            "error",
            "always"
        ],
        "newline-per-chained-call":[  
            "error",
            {  
                "ignoreChainWithDepth":2
            }
        ],
        "no-mixed-operators":"error",
        "no-multiple-empty-lines":[  
            "error",
            {  
                "max":2,
                "maxEOF":1,
                "maxBOF":1
            }
        ],
        "no-unneeded-ternary":"error",
        "no-whitespace-before-property":"error",
        "space-before-blocks":"error",
        "space-infix-ops":"error",
        "spaced-comment":[  
            "error",
            "always"
        ],
        "valid-jsdoc":[  
            "error"
        ],
        "require-jsdoc":[  
            "error",
            {  
                "require":{  
                    "FunctionDeclaration":true,
                    "MethodDefinition":true,
                    "ClassDeclaration":true
                }
            }
        ],
        "max-depth":[  
            "error",
            4
        ],
        "max-len":[  
            "error",
            150
        ],
        "max-lines":[  
            "warn",
            {  
                "max":600,
                "skipBlankLines":true,
                "skipComments":true
            }
        ],
        "max-nested-callbacks":[  
            "error",
            4
        ],
        "max-params":[  
            "warn",
            5
        ],
        "max-statements-per-line":[  
            "error",
            {  
                "max":1
            }
        ],
        "max-statements":[  
            "warn",
            50,
            {
                "ignoreTopLevelFunctions": true
            }
        ]
    }
}